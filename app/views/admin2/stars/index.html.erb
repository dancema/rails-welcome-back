
<div class="container">
  <h2>INDEX</h2>


  <form action="/admin2/stars?query=" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="inputBatchName">Batch Name</label>
    <select id="inputBatchName" name="batch_name" class="form-control">
      <%= @batch_names.each do |batch_name| %>
        <option value="<%= batch_name %>"><%= batch_name %></option>
      <% end %>
    </select>

    <button type="submit" class="btn btn-primary">Display</button>
  </form>

  <% if  !@stars.nil? %>
    <%= @stars.each do |star| %>
      <div class="card-flyer">
        <h2><%= star.code %></h2>

      </div>
    <% end %>

  <% end %>

    <table class="qr">
    <% @qr.modules.each_index do |x| %>
        <tr>
          <% @qr.modules.each_index do |y| %>
              <% if @qr.qrcode.checked?(x,y) %>
                  <td class="black"/>
              <% else %>
                  <td class="white"/>
              <% end %>
          <% end %>
        </tr>
    <% end %>
  </table>
</div>
