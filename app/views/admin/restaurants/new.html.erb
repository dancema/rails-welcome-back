<%= form_for [:admin,@restaurant] do |f| %>

  <div class="form-inputs">

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :street %>
    <%= f.text_field :street %>
    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>

    <%= f.label :website_url %>
    <%= f.text_field :website_url %>
    <%= f.collection_select(:user_id, User.where(role: 'restaurant'), :id, :email) %>
  </div>
  <%= f.submit "Create" %>

<% end %>

