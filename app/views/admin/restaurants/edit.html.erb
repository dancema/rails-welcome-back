<%= form_for [:admin, @restaurant] do |f| %>
  <div class="field">
    <%= f.label 'Name' %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <%= f.label 'Street' %><br>
    <%= f.text_field :street %><br>
  </div>

  <div class="field">
    <%= f.label 'city' %><br>
    <%= f.text_field :city %><br>
  </div>

  <div class="field">
    <%= f.label 'Postal code' %><br>
    <%= f.text_field :postal_code %><br>
  </div>

  <div class="field">
    <%= f.label 'Website url' %><br>
    <%= f.text_area :website_url %><br>
  </div>

  <%= f.submit "Submit Restaurant" %>
<% end %>


